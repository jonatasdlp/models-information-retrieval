<div class="span12">
  <div class="well well-small">
    <h3><i class="icon-align-justify"></i> <%= t('vocabulary') %></h3>
  </div>
  <div id="content-page">
    <%= image_tag 'wait.gif', style: 'margin-left:34%;display:none;' %>
    <table class="table table-bordered">
      <tr>
        <td style="text-align:center"><h4><%= t('terms') %></h4></td>
        <td style="text-align:center"><h4>DF</h4></td>
      </tr>
      <% @vocabulary.inverted_index.each_with_index do |t, i| %>
        <tr>
          <td><%= t.word %></td>
          <td>
            <% cont = 0 %>
            <% t.location.each_with_index do |l, c| %>
              <% cont =+ c + 1 %>
            <% end %>
            <%= cont %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
